<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
     <img src="http://robohash.org/123">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    over 6 years ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    over 6 years ago
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
<% @filmography.each do |a_film| %>
  <tr>
    <th>
      Title
    </th>
    <th>
      Year
    </th>
    <th>
      Director
    </th>
    <th>
      Character name
    </th>
    <th>
    </th>
  </tr>
    <tr>
      <td>
        <%= a_film.title %>
      </td>
      <td>
        <%= a_film.year %>
      </td>
      <td>
        <% d = Director.where({ :id => a_film.director_id }).at(0) %>
        <%= d.name %>
      </td>
      <td>
        <% c = Character.all.at(0) %>
        <%= c.name %>
      </td>
      <td>
        <a href="/movies/<%= a_film.id %>">
          Show details
        </a>
      </td>
    </tr>
    <% end %>
</table>
